        }
    });

    data = {
        adminMemo: msg,
        state: state,
        memberId: $('#memberId').val(),
        tokenId: $('#tokenId').val(),
        language: $('#language').val(),
        name: name,
        gender: gender,
        birth: birth,
        country: country,
        residence: residence,
        menu: 'ID_APPROVAL',
        action: action
    }

    $.ajax({
        url: "id_approval/process/" + $('#approval-seq').val(),
        type: 'POST',
        dataType: 'json',
        contentType: 'application/json',
        data: JSON.stringify(data),
