$('.process-btn').click(function() {
    let data = "", msg = " ", state = "", name = "", gender = "", birth = "", country = "", residence = "", action = "";
    if ($(this).hasClass('reject')) {
        state = "INVALID";
        action = "ID_REJECT";
        if ($('#reject-select').val() == 'custom') {
            msg = $('#reject-custom-msg').val();
            if (msg.length == 0) {
                toastr.error('거절 사유를 입력해주세요.');
                return;
            }
        } else {
            msg = $('#reject-select').val();
        }
    } else if ($(this).hasClass('approval')) {
        state = "VALID";
        action = "ID_APPROVE";
        name = $('#name').text();
        gender = $('#gender').val();
        birth = $('#birth').val();
        country = $('#country').text();
        residence = $('#residence').val();

        if (birth.length < 8) {
            toastr.error("생년월일 8자리를 입력해주세요.");
            $('#confirmModal').modal('hide');
            return;
        }
    }
    
    var formData = new FormData(),
        $canvas1, $canvas2, imgDataUrl1, imgDataUrl2, file1, file2;
       
    if (canvas1) {
        $canvas1 = document.getElementById("canvas1");
        imgDataUrl1 = $canvas1.toDataURL('image/png');
