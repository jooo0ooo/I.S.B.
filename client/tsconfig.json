{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@src/*": [
				"src/*"
			],
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"exclude": ["node_modules", "dist"],
	"include": [".eslintrc.js", "src/**/*"]
}
